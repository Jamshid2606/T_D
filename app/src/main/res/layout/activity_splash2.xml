<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.SplashActivity2">
    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/boshlash"
        app:iss_selected_dot="@drawable/selected_img_slide"
        app:iss_unselected_dot="@drawable/unselected_img_slide"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/boshlash"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_buttons"
        android:text="Boshlash"
        android:layout_marginVertical="44dp"
        android:layout_marginHorizontal="22dp"
        android:textAllCaps="false"
        android:fontFamily="@font/inter"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/imageSlider"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>